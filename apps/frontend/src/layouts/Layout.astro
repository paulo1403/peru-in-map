---
import '../styles/global.css';
import { Header } from '../components/Header';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={Astro.props.description || 'QueHacer.pe | Descubre lugares increíbles en Perú'} />
		<title>{Astro.props.title || 'QueHacer.pe | Descubre el Perú'}</title>
	</head>
	<body class="min-h-screen text-text-primary">
		<Header client:load />
		<main class="flex-1">
			<slot />
		</main>
	</body>
</html>