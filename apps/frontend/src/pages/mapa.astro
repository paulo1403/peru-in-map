---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Mapa Interactivo | QueHacer.pe" description="Explora el mapa de Perú, descubre rutas y lugares increíbles.">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-text mb-2">Mapa de Exploración</h1>
      <p class="text-secondary">Descubre lugares increíbles en Perú</p>
    </div>

    <div class="bg-background/50 backdrop-blur-sm rounded-3xl p-6 shadow-2xl min-h-[400px] flex items-center justify-center">
      <p class="text-secondary">Mapa próximamente...</p>
    </div>
  </div>
</Layout>