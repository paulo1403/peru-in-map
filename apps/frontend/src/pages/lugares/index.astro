---
import Layout from '@/layouts/Layout.astro';
import { PlacesHeader } from '@/components/PlacesHeader';
import { CategoryFilters } from '@/components/CategoryFilters';
import { api } from '@/services/api';

// Fetch places from API
const response = await api.getPlaces({ 
  limit: 20,
  sortBy: 'newest'
});

const places = response.success && response.data ? response.data.items : [];
const hasPlaces = places.length > 0;
---

<Layout title="Lugares | QueHacer.pe" description="Descubre lugares incre√≠bles en Per√∫">
  <div class="min-h-screen bg-gradient-to-br from-background to-white">
    <!-- Header Section -->
    <PlacesHeader client:load />

    <div class="container mx-auto px-4 py-8">
      <!-- Filters Bar -->
      <CategoryFilters client:load />
      
      <div class="mb-8">
          </button>
          <button class="px-6 py-2.5 rounded-full bg-white border-2 border-border text-text text-sm font-semibold whitespace-nowrap hover:border-primary hover:text-primary transition-all">
            üç∫ Bares
          </button>
        </div>
      </div>

      <!-- Places Grid -->
      {hasPlaces ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {places.map((place: any) => (
            <a 
              href={`/lugares/${place.id}`}
              class="group block bg-white border border-border rounded-2xl overflow-hidden hover:border-primary/50 hover:shadow-xl transition-all duration-300 hover:-translate-y-1"
            >
              <!-- Image -->
              <div class="relative h-52 bg-gradient-to-br from-primary/10 via-accent/5 to-secondary/10 flex items-center justify-center overflow-hidden">
                {place.isSponsored && (
                  <div class="absolute top-4 right-4 z-10">
                    <span class="px-3 py-1 text-xs font-bold bg-accent text-white rounded-full shadow-lg">
                      Destacado
                    </span>
                  </div>
                )}
                <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent"></div>
                <svg class="w-14 h-14 text-primary/40 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>

              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-bold text-text group-hover:text-primary transition mb-2">
                  {place.name}
                </h3>
                
                <p class="text-secondary mb-4 line-clamp-2 leading-relaxed">
                  {place.description}
                </p>

                <div class="flex items-center justify-between pt-4 border-t border-border">
                  <div class="flex items-center gap-2">
                    {place.rating && place.rating > 0 ? (
                      <>
                        <div class="flex items-center gap-1.5">
                          <svg class="w-5 h-5 text-accent fill-current" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                          </svg>
                          <span class="font-bold text-text">{place.rating.toFixed(1)}</span>
                        </div>
                        <span class="text-sm text-secondary">({place.reviewCount})</span>
                      </>
                    ) : (
                      <span class="text-sm text-secondary">Sin rese√±as</span>
                    )}
                  </div>

                  <span class="text-sm text-secondary font-medium">
                    {place.district}
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-24">
          <div class="max-w-md mx-auto">
            <div class="w-20 h-20 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-primary/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-text mb-2">No hay lugares disponibles</h3>
            <p class="text-secondary">Intenta cambiar los filtros o vuelve m√°s tarde</p>
          </div>
        </div>
      )}
    </div>
  </div>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>