---
import '../styles/global.css';
import FooterClient from '../components/FooterClient';
import HeaderClient from '../components/HeaderClient';
import AppWrapper from '../components/AppWrapper';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'QueHacer.pe | Descubre el Perú',
  description = 'Mapas interactivos y guías de exploración urbana en Perú.',
} = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen text-text">
		<AppWrapper client:load>
			<HeaderClient client:load />
			<main class="flex-1">
				<slot />
			</main>
			<FooterClient client:load />
		</AppWrapper>
	</body>
</html>
