---
import { IconMapPin } from '@tabler/icons-react';
import PeruMap from '../components/PeruMap';
import Layout from '../layouts/Layout.astro';

const title = 'Mapa Interactivo | QueHacer.pe';
const description = 'Explora el mapa de Perú, descubre rutas y lugares increíbles.';
---

<Layout title={title} description={description}>
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center gap-3">
      <div class="rounded-lg bg-red-100 p-2 text-red-600">
        <IconMapPin size={32} />
      </div>
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Mapa de Exploración</h1>
        <p class="text-gray-600">Navega por el Perú y encuentra tu próximo destino.</p>
      </div>
    </div>

    <div class="w-full">
      <PeruMap client:only="react" />
    </div>
  </div>
</Layout>
